<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="@dimen/notification_barcode_content_padding_left"
    android:paddingEnd="@dimen/notification_barcode_content_padding_right"
    android:paddingTop="@dimen/notification_barcode_content_padding_top"
    android:paddingBottom="@dimen/notification_barcode_content_padding_bottom">

    <LinearLayout
        android:id="@+id/notification_barcode_expanded_properties"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/notification_barcode_content_horizontal_properties_height"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="3">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/notification_barcode_expanded_properties"
        android:layout_marginTop="@dimen/notification_barcode_content_padding_top"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageview_notification_barcode_expanded"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"/>

        <TextView
            android:id="@+id/textview_notification_barcode_expanded_barcodedata"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/notification_barcode_data_height"
            android:visibility="gone"
            android:gravity="center"
            android:textSize="@dimen/notification_barcode_data_size"
            android:textColor="@color/notification_barcode_data"
            android:ellipsize="end"
            android:maxLines="1"/>

    </LinearLayout>

</RelativeLayout>