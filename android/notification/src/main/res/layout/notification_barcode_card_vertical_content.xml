<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="@dimen/notification_barcode_content_padding_left"
    android:paddingEnd="@dimen/notification_barcode_content_padding_right"
    android:paddingTop="@dimen/notification_barcode_content_padding_top"
    android:paddingBottom="@dimen/notification_barcode_content_padding_top"
    android:gravity="center_vertical|center_horizontal">

    <LinearLayout
        android:id="@+id/notification_barcode_expanded_properties"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toStartOf="@+id/notification_barcode_expanded_square"
        android:gravity="start"
        android:orientation="vertical"
        android:weightSum="3">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/notification_barcode_expanded_square"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"

        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/notification_barcode_content_padding_right"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageview_notification_barcode_expanded"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"/>

    </LinearLayout>

</RelativeLayout>